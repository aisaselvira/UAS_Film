<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FilmAdminAdd"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/blue2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            android:layout_marginLeft="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Movie"
            android:layout_gravity="center"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"
            android:paddingLeft="110dp"
            android:paddingTop="5dp"
            android:textSize="18dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title :"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14sp"
            android:hint="Title"
            android:inputType="text"
            android:paddingLeft="20sp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppinsregular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director :"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/txt_director"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14sp"
            android:inputType="text"
            android:hint="Director"
            android:paddingLeft="20sp"
            android:fontFamily="@font/poppinsregular"
            android:background="@drawable/rounded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writter :"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/txt_writter"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14sp"
            android:inputType="text"
            android:hint="Writter"
            android:paddingLeft="20sp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppinsregular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating :"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/txt_rating"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14sp"
            android:inputType="text"
            android:hint="Rating"
            android:paddingLeft="20sp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppinsregular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinopsis :"
            android:fontFamily="@font/poppinssemibold"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/txt_sinopsis"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14sp"
            android:inputType="text"
            android:hint="Sinopsis"
            android:paddingLeft="20sp"
            android:background="@drawable/rounded"
            android:fontFamily="@font/poppinsregular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/adminListAddImage"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imgViewAdd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/defaultimg" />

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btn_choose_image"
                android:layout_width="160dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsmedium"
                android:backgroundTint="@color/red"
                android:drawablePadding="8dp"
                android:paddingStart="16dp"
                android:text="Choose Image" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppinsmedium"
            android:backgroundTint="@color/blue2"
            />

    </LinearLayout>
</LinearLayout>
</ScrollView>